<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:id="@+id/relativelayout">

    <ImageView
        android:layout_width="32dp"
        android:layout_height="400dp"
        app:srcCompat="@mipmap/blue"
        android:id="@+id/timebar"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/left"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/upp"
        android:alpha="0"
        android:layout_above="@+id/down" />

    <Button
        android:text="Right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/right"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/upp"
        android:alpha="0"
        android:layout_above="@+id/down" />

    <Button
        android:text="Up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:id="@+id/upp"
        android:layout_above="@+id/timebar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:alpha="0"
        android:layout_alignParentTop="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ham"
        android:layout_marginBottom="61dp"
        android:tag="wall"
        android:id="@+id/bugman"
        android:layout_alignBottom="@+id/timebar"
        android:layout_alignLeft="@+id/cake"
        android:layout_alignStart="@+id/cake" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/chip_down"
        android:id="@+id/cake"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Down"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:id="@+id/down"
        android:alpha="0"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/timebar" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/shoe"
        android:layout_alignTop="@+id/cake"
        android:layout_alignLeft="@+id/right"
        android:layout_alignStart="@+id/right"
        android:id="@+id/shoe" />

    <TextView
        android:text=
            "Press the sides of the screen to move around\nGet ham for points, and shoes for more steps\n\nThe bomb makes you lose steps and points\nWhen you run out of steps, the game ends."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:id="@+id/tutorial"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/upp" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="4"
        android:scaleY="4"
        android:id="@+id/score_label"
        android:layout_below="@+id/upp"
        android:layout_centerHorizontal="true" />

    <!--These are the extra shoes to use-->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="28dp"
        android:layout_marginEnd="28dp"
        android:id="@+id/shoe2"
        android:layout_below="@+id/upp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="28dp"
        android:layout_marginEnd="28dp"
        android:id="@+id/shoe3"
        android:layout_below="@+id/upp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="28dp"
        android:layout_marginEnd="28dp"
        android:id="@+id/shoe4"
        android:layout_below="@+id/upp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="28dp"
        android:layout_marginEnd="28dp"
        android:id="@+id/shoe5"
        android:layout_below="@+id/upp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <!--These are the extra goals to use-->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="28dp"
        android:layout_marginEnd="28dp"
        android:id="@+id/goal2"
        android:layout_below="@+id/upp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="28dp"
        android:layout_marginEnd="28dp"
        android:id="@+id/goal3"
        android:layout_below="@+id/upp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <!--These are the threats in use-->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="28dp"
        android:layout_marginEnd="28dp"
        android:id="@+id/threat1"
        android:layout_below="@+id/upp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="28dp"
        android:layout_marginEnd="28dp"
        android:id="@+id/threat2"
        android:layout_below="@+id/upp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="28dp"
        android:layout_marginEnd="28dp"
        android:id="@+id/threat3"
        android:layout_below="@+id/upp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="28dp"
        android:layout_marginEnd="28dp"
        android:id="@+id/threat4"
        android:layout_below="@+id/upp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="28dp"
        android:layout_marginEnd="28dp"
        android:id="@+id/threat5"
        android:layout_below="@+id/upp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />




</RelativeLayout>